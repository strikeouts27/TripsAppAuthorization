@model TripsApp.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h2 class="mb-3">Register</h2>
<p class="text-muted">Create an account to add trips and manage your travel plans.</p>

<form asp-action="Register" method="post" class="mt-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Username" class="form-label"></label>
        <input asp-for="Username" class="form-control" autocomplete="username" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" autocomplete="new-password" />
        <span asp-validation-for="Password" class="text-danger"></span>
        <div class="form-text">Password must be at least 6 characters and include an uppercase letter.</div>
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
